@model LibraryManagementSystem.Models.BookViewModel
@{
    ViewData["Title"] = "Book Details";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 0 20px;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    }
    .card-lumi {
        border: none;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }
    .card-header-lumi {
        background-color: #fff;
        color: #845ec2;
        font-weight: 600;
        font-size: 1.2rem;
        border-bottom: 1px solid #eee;
        border-radius: 10px 10px 0 0;
        padding: 15px;
    }
    .card-body-lumi {
        padding: 20px;
    }
    .detail-item {
        margin-bottom: 10px;
        font-size: 1rem;
        color: #555;
    }
    .detail-item strong {
        color: #845ec2;
    }
    /* Rounded outline button */
    .btn-lumi-outline {
        background-color: #fff;
        color: #845ec2;
        border: 2px solid #845ec2;
        border-radius: 20px;
        font-weight: 600;
        transition: border-color 0.2s, color 0.2s, transform 0.2s;
        padding: 8px 20px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }
    .btn-lumi-outline:hover {
        border-color: #ff6fb7;
        color: #ff6fb7;
        transform: translateY(-2px);
        text-decoration: none;
    }
    a, a:visited, a:hover, a:active {
        text-decoration: none !important;
    }
</style>

<div class="form-container">
    <div class="card-lumi">
        <div class="card-header-lumi">
            @Model.Title Details
        </div>
        <div class="card-body-lumi">
            <div class="detail-item"><strong>Genre:</strong> @Model.Genre</div>
            <div class="detail-item"><strong>Author:</strong> @Model.AuthorName</div>
            <div class="detail-item"><strong>ISBN:</strong> @Model.ISBN</div>
            <div class="detail-item"><strong>Publish Date:</strong> @Model.PublishDate.ToShortDateString()</div>
            <div class="detail-item"><strong>Copies Available:</strong> @Model.CopiesAvailable</div>
        </div>
    </div>
    <div class="mt-3 text-end">
        <a href="@Url.Action("List", "Book")" class="btn-lumi-outline" title="Back">
            <i class="bi bi-arrow-left-circle"></i>
        </a>
    </div>
</div>