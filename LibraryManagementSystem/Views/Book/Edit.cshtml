@model LibraryManagementSystem.Models.BookViewModel
@{
    ViewData["Title"] = "Edit Book";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 0 20px;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    }
    .card-lumi {
        border: none;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }
    .card-header-lumi {
        background-color: #fff;
        color: #845ec2;
        font-weight: 600;
        font-size: 1.2rem;
        border-bottom: 1px solid #eee;
        border-radius: 10px 10px 0 0;
        padding: 15px;
    }
    .card-body-lumi {
        padding: 20px;
    }
    label {
        font-weight: 600;
        color: #555;
    }
    .form-control, .form-select {
        border-radius: 10px;
        margin-bottom: 15px;
    }
    /* Button styles, same as in the Create page */
    .btn-lumi {
        background-color: #845ec2;
        color: #fff;
        border: none;
        border-radius: 20px;
        font-weight: 600;
        transition: background-color 0.2s, transform 0.2s;
        padding: 8px 20px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }
    .btn-lumi:hover {
        background-color: #ff6fb7;
        transform: translateY(-2px);
        text-decoration: none;
    }
    .btn-lumi-outline {
        background-color: #fff;
        color: #845ec2;
        border: 2px solid #845ec2;
        border-radius: 20px;
        font-weight: 600;
        transition: border-color 0.2s, color 0.2s, transform 0.2s;
        padding: 8px 20px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }
    .btn-lumi-outline:hover {
        border-color: #ff6fb7;
        color: #ff6fb7;
        transform: translateY(-2px);
        text-decoration: none;
    }
    a, a:visited, a:hover, a:active {
        text-decoration: none !important;
    }
</style>

<div class="form-container">
    <div class="card-lumi">
        <div class="card-header-lumi">
            Edit Book
        </div>
        <div class="card-body-lumi">
            <form method="post">
                <div class="mb-2">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="Genre"></label>
                    <input asp-for="Genre" class="form-control" required />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="AuthorId"></label>
                    <select asp-for="AuthorId" class="form-select" asp-items="ViewBag.Authors">
                        <option value="">Choose the Author...</option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="ISBN"></label>
                    <input asp-for="ISBN" class="form-control" required />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="PublishDate"></label>
                    <input type="date" asp-for="PublishDate" class="form-control" required />
                    <span asp-validation-for="PublishDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CopiesAvailable"></label>
                    <input type="number" asp-for="CopiesAvailable" class="form-control" required />
                    <span asp-validation-for="CopiesAvailable" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <a asp-action="List" class="btn-lumi-outline me-2">
                        <i class="bi bi-arrow-left-circle"></i>
                    </a>
                    <button type="submit" class="btn-lumi">
                        <i class="bi bi-check-circle"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>